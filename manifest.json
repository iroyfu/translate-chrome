{
  "manifest_version": 3,
  "name": "AI 极简翻译助手",
  "version": "1.0.20250714",
  "description": "使用在线服务大模型的 API 进行智能网页翻译",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "content/content.js",
          "content/page-translator.js",
          "content/keyboard-shortcuts.js",
          "content/utils/languages.js",
          "content/utils/cache-manager.js",
          "content/utils/dom-processor.js",
          "content/utils/translation-service.js"
        ],
        "css": [
          "content/content.css"
        ]
      }
    ],
  "web_accessible_resources": [
    {
      "resources": [
        "web-accessible-utils/language-utils.js",
        "options/options.html",
        "options/options.css",
        "options/options.js",
        "panel/panel.html",
        "panel/panel.css",
        "panel/panel.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "compareTranslate": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "MacCtrl+Shift+C"
      },
      "description": "触发流式对比翻译"
    },
    "replaceTranslate": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "MacCtrl+Shift+R"
      },
      "description": "触发流式替换翻译"
    }
  },
  "host_permissions": [
    "https://api.siliconflow.cn/*"
  ]
}